---
interface Props {
	element?: string;
	className?: string;
	[key: string]: any;
}

const { element: Element = "section", class: className, ...rest } = Astro.props;
---

<Element class:list={["page-section", className]} {...rest}>
	<div class="page-section-inner">
		<slot />
	</div>

	<slot name="outer" />
</Element>

<style>
	.page-section {
		position: relative;
	}

	.page-section-inner {
		display: block;
		position: relative;
		box-sizing: border-box;
		max-inline-size: 1280px;
		padding-inline: 48px;
		padding-block: 128px;
		margin-inline: auto;
	}

	.page-section :global(.title) {
		line-height: 1.4;
		color: var(--foreground-primary);
		font-family: var(--font-monospace);
		font-weight: 200;
		margin-block-start: 0;
	}

	.page-section :global(h1.title) {
		font-size: 5.6rem;
		margin: 0;
	}

	.page-section :global(h2.title) {
		font-size: 4.8rem;
		margin: 0;
	}

	.page-section :global(.subtitle) {
		font-size: 2.0rem;
		line-height: 2;
		font-weight: 400;
		max-inline-size: 50ch;
		color: var(--foreground-secondary);
	}

	.page-section :global(.subtitle a) {
		color: var(--foreground-accent-red);
		text-decoration: none;
		border-bottom: 1px solid currentColor;
		transition: 250ms ease;
	}

	.page-section :global(.subtitle a:hover) {
		opacity: 0.8;
	}

	@media screen and (max-width: 1280px) {
		.page-section :global(h1.title) {
			font-size: 5.6rem;
		}
	}

	@media screen and (max-width: 1024px) {
		.page-section :global(h1.title) {
			font-size: 4.8rem;
		}

		.page-section :global(p.subtitle) {
			font-size: 2.0rem;
		}
	}
	
	@media screen and (max-width: 768px) {
		.page-section-inner {
			padding-inline: 32px;
		}
	}
</style>
